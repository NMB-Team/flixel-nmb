{
    "haxe.enableCompilationServer": false,
	"haxe.displayPort": "auto",
	"haxe.enableServerView": true,

	"[haxe]": {
		"editor.formatOnSave": false,
		"editor.formatOnSaveMode": "modifications",
		"editor.defaultFormatter": "nadako.vshaxe"
	},

	"editor.detectIndentation": false,
	"editor.insertSpaces": false,
	"editor.tabSize": 4,
	"editor.trimAutoWhitespace": true,

	"files.trimTrailingWhitespace": true,
	"files.trimFinalNewlines": true,
	"files.eol": "\n",
	"files.associations": {
		"*.hx": "haxe",
		"*.hscript": "haxe",
		"*.hsc": "haxe",
		"*.hxs": "haxe",
	},

	"haxecheckstyle.configurationFile": "checkstyle.json",
	"haxecheckstyle.sourceFolders": ["flixel"],
	"haxecheckstyle.externalSourceRoots": [],
	"haxecheckstyle.codeSimilarityBufferSize": 100,

	"haxe.configurations": [
		{
			"label": "JS",
			"args": [
				"-lib",
				"openfl",
				"-lib",
				"lime",
				"--macro",
				"flixel.system.macros.FlxDefines.run()",
				"-js",
				"foo.js",
				"--remap",
				"flash:openfl"
			]
		}
	],

	"lime.buildTypes": [
		{
			"label": "Final",
			"enabled":false
		},
		{
			"label": "Debug",
			"enabled":false
		}
	]
}